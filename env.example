# Environment Variables for Team Collaboration App Frontend
# Copy this file to .env.local for local development
# Set these variables in Vercel dashboard for production

# FastAPI Backend URL (your deployed Railway URL)
# For local development: http://localhost:8000
# For production: https://your-railway-backend-url.railway.app
REACT_APP_API_BASE_URL=http://localhost:8000

# WebSocket Server URL (Node.js backend on Railway)
# For local development: ws://localhost:3001
# For production: wss://your-railway-websocket-url.railway.app
REACT_APP_WS_URL=ws://localhost:3001

# Optional: Enable debug mode in production (set to false for production)
REACT_APP_DEBUG=false
