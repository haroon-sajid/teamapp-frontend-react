# Environment Variables for Team Collaboration App Frontend
# Copy this file to .env.local for local development
# Set these variables in Vercel dashboard for production

# FastAPI Backend URL
# For local development: http://localhost:8000
# For production: https://teamapp-backend-python-1.onrender.com
REACT_APP_API_BASE_URL=http://localhost:8000

# WebSocket Server URL
# For local development: ws://localhost:3001
# For production: wss://web-production-3f101.up.railway.app
REACT_APP_WS_URL=ws://localhost:3001

# Optional: Enable debug mode (set to false for production)
REACT_APP_DEBUG=true
